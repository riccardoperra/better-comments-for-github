{
  "manifest_version": 3,
  "name": "GitHub better comments",
  "version": "1.0.0",
  "permissions": [
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "src/content.tsx"
      ],
      "matches": [
        "https://github.com/*"
      ],
      "run_at": "document_idle"
    }
  ]
}